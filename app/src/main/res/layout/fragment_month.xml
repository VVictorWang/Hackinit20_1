<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.viseator.hackinit20_1.fragments.MonthFragment">

    <TextView
        android:id="@+id/game_hour_all_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        />

    <CalendarView
        android:id="@+id/carlendar_view"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_below="@+id/game_hour_all_month"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/game_record_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/carlendar_view"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="本月游戏记录"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/carlendar_view"
        android:layout_marginTop="40dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/record_list_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />
    </android.support.v7.widget.CardView>
</RelativeLayout>
